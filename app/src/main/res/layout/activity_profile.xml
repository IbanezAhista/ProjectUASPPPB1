<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4E342E"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="Profile"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_person_4_24" />

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ibanez Centivolia Ahista"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Username"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium" />

    <TextView
        android:id="@+id/txtUsername1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="IbanezAhista"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Email"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium" />

    <TextView
        android:id="@+id/txtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="ibanezcentivoliaahista@mail.ugm.ac.id"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Role"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium" />

    <TextView
        android:id="@+id/txtRole1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Customer"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:textSize="15dp"
        android:backgroundTint="@color/white"
        android:textColor="#4E342E"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="Logout" />

</LinearLayout>
