<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#4E342E"
    android:gravity="center">

    <ImageView
        android:id="@+id/ic_bakery"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:text="Selamat datang di BerryBites Bakery!"/>

    <TextView
        android:id="@+id/txt_titleUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:text="Username"/>

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Username"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txt_titlePassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Password"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_loginA"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Login sebagai Admin"
        android:textSize="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#4E342E"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btn_loginC"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Login sebagai Customer"
        android:textSize="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#4E342E"
        android:layout_marginTop="5dp"/>

</LinearLayout>